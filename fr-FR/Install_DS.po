#. Tag: title
#, no-c-format
msgid "Start/Stop 389-ds services"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Make the LDAP server services to start automatically on every reboot."
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"                systemctl enable dirsrv.target\n"
"                systemctl enable dirsrv-admin\n"
""
msgstr ""


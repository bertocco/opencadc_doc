#. Tag: title
#, no-c-format
msgid "Performance and security setup"
msgstr ""

#. Tag: para
#, no-c-format
msgid "As prereqiuisite, set performance and security for LDAP server. For first edit the file <command>/etc/sysctl.conf</command> and add the following lines at the end:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"net.ipv4.tcp_keepalive_time = 300\n"
"net.ipv4.ip_local_port_range = 1024 65000\n"
"fs.file-max = 64000\n"
""
msgstr ""

#. Tag: para
#, no-c-format
msgid "Edit file <command>/etc/security/limits.conf</command> adding the following lines at the bottom:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"*               soft     nofile          8192\n"
"*               hard     nofile          8192\n"
""
msgstr ""

#. Tag: para
#, no-c-format
msgid "Edit file <command>/etc/profile</command> adding the following line at the end:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"ulimit -n 8192\n"
""
msgstr ""

#. Tag: para
#, no-c-format
msgid "Now restart the server."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Installation steps"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Install epel repository"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"yum install epel-release\n"
""
msgstr ""

#. Tag: para
#, no-c-format
msgid "and check it is enabled."
msgstr ""

#. Tag: para
#, no-c-format
msgid "Create a LDAP user account"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"useradd ldapadmin\n"
"passwd ldapadmin\n"
""
msgstr ""

#. Tag: para
#, no-c-format
msgid "Install 389 directory"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "\n"
"yum install 389-ds-base openldap-clients\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/i/idm-console-framework-1.1.14-1.el7.noarch.rpm\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/3/389-adminutil-1.1.22-1.el7.x86_64.rpm\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/3/389-admin-1.1.42-1.el7.x86_64.rpm\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/3/389-admin-console-1.1.10-1.el7.noarch.rpm\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/3/389-console-1.1.9-1.el7.noarch.rpm\n"
"yum localinstall ftp://rpmfind.net/linux/epel/testing/7/x86_64/3/389-ds-console-1.2.12-1.el7.noarch.rpm\n"
""
msgstr ""

